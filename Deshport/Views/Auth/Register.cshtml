
@model Deshport.Domain.ViewModel.Client.RegisterView
<link rel="stylesheet" href="~/css/formstyle.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div id="loginform" class="main_login_form col-lg-5 col-md-6 col-sm-8 col-xl-5 col-xxl-4">
    <div class="card-header">
        <h3 class="mb-0 text-center ParagraphHome">Register</h3>                            
    </div>
    <div class="card-body">
        <form autocomplete="on" method="post" asp-controller="Auth" asp-action="Register">
           <div asp-validation-summary="All" style="font-size:15px;" class="text-danger text-center"></div>
           <div class="form-group">
                <input asp-for="FirstName" placeholder="Firstname" class="form-control textbox-dg font-weight-bold text-center" type="text">                                   
           </div>
           <div class="form-group">
                <input asp-for="LastName" placeholder="LastName" class="form-control textbox-dg font-weight-bold text-center" type="text">                                   
           </div>
           <div class="form-group">
                <input asp-for="Mail" placeholder="Email" class="form-control textbox-dg font-weight-bold text-center" type="email">                                   
           </div>
           <div class="form-group">
               <input asp-for="Password" placeholder="Password" class="form-control textbox-dg font-weight-bold text-center" type="password">                                   
           </div>                               
           <div class="form-group">
               <input asp-for="PasswordConfirm" placeholder="Password confirm" class="form-control textbox-dg font-weight-bold text-center" type="password">                                   
           </div> 
           <button class="btn btn-success  float-right">Registration</button>
        </form>                        
    </div>                   
</div>